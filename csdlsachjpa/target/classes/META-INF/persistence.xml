<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="csdlsach">
        <class>Entity.Dathang</class>
        <class>Entity.Hoadon</class>
        <class>Entity.Khachhang</class>
        <class>Entity.Sach</class>
        <class>Entity.Address</class>
        <class>Entity.Employee</class>

        <class>Embedded.Entity.User</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/csdlsach" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
